@model WebApplication_UESL.Models.Course

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CatalogNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CatalogNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ClassName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClassName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SectionNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SectionNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Instructor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Instructor)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MeetTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MeetTime)
        </dd>

    </dl>
    <table class="table">
        <tr>
            <th>
                Student ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Letter Grade
            </th>
            <th>
                Placement
            </th>
            <th>
                Quarter Of Placement
            </th>
        </tr>

        @foreach (var item in Model.Enrollments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.LetterGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Placement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.QuarterOfPlacement)
                </td>
            </tr>
        }
    </table>
</div>
